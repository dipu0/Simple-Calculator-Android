<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecfd"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="#c5d0f0"
        android:fontFamily="@font/custom_seven_egment"
        android:gravity="center"
        android:text=""
        android:textSize="40dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tv1"
        android:background="#c5d0f0">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="="
            android:textSize="25dp"
            android:layout_weight="3"
            android:textStyle="bold"
            android:fontFamily="@font/custom_seven_egment"/>
        <Button
            android:id="@+id/btnDel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Delete"
            android:backgroundTint="#fad5cf"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>


<TableLayout
    android:layout_below="@+id/LL1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecfd"
    android:layout_margin="5dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="รท"
            android:textSize="35dp"
            android:backgroundTint="#ccd7f7"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnMul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="ร"
            android:textSize="35dp"
            android:backgroundTint="#ccd7f7"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="35dp"
            android:backgroundTint="#ccd7f7"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="."
            android:textSize="35dp"
            android:textStyle="bold"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="35dp"
            android:backgroundTint="#e9ecfd"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnEql"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="="
            android:textSize="35dp"
            android:backgroundTint="#81c784"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="35dp"
            android:backgroundTint="#ccd7f7"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>
</RelativeLayout>